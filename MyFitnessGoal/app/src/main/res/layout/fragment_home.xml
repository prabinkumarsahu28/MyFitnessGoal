<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoke_white"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:elevation="@dimen/dp_10"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15">

                <TextView
                    android:id="@+id/tvRemCalHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="Calories Remaining"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvGoalNumHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1919"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintEnd_toStartOf="@id/tvSubHome"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRemCalHome" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    app:layout_constraintEnd_toEndOf="@id/tvGoalNumHome"
                    app:layout_constraintStart_toStartOf="@id/tvGoalNumHome"
                    app:layout_constraintTop_toBottomOf="@id/tvGoalNumHome" />

                <TextView
                    android:id="@+id/tvSubHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintEnd_toStartOf="@id/tvFoodNumHome"
                    app:layout_constraintStart_toEndOf="@id/tvGoalNumHome"
                    app:layout_constraintTop_toBottomOf="@id/tvRemCalHome" />

                <TextView
                    android:id="@+id/tvFoodNumHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintEnd_toStartOf="@id/tvAddHome"
                    app:layout_constraintStart_toEndOf="@id/tvSubHome"
                    app:layout_constraintTop_toBottomOf="@id/tvRemCalHome" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    app:layout_constraintEnd_toEndOf="@id/tvFoodNumHome"
                    app:layout_constraintStart_toStartOf="@id/tvFoodNumHome"
                    app:layout_constraintTop_toBottomOf="@id/tvFoodNumHome" />

                <TextView
                    android:id="@+id/tvAddHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintEnd_toStartOf="@id/tvExerNumHome"
                    app:layout_constraintStart_toEndOf="@id/tvFoodNumHome"
                    app:layout_constraintTop_toBottomOf="@id/tvRemCalHome" />

                <TextView
                    android:id="@+id/tvExerNumHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintEnd_toStartOf="@id/tvEqualHome"
                    app:layout_constraintStart_toEndOf="@id/tvAddHome"
                    app:layout_constraintTop_toBottomOf="@id/tvRemCalHome" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise"
                    app:layout_constraintEnd_toEndOf="@id/tvExerNumHome"
                    app:layout_constraintStart_toStartOf="@id/tvExerNumHome"
                    app:layout_constraintTop_toBottomOf="@id/tvExerNumHome" />

                <TextView
                    android:id="@+id/tvEqualHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintEnd_toStartOf="@id/tvRemNumHome"
                    app:layout_constraintStart_toEndOf="@id/tvExerNumHome"
                    app:layout_constraintTop_toBottomOf="@id/tvRemCalHome" />

                <TextView
                    android:id="@+id/tvRemNumHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:text="1919"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvEqualHome"
                    app:layout_constraintTop_toBottomOf="@id/tvRemCalHome" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining"
                    android:textColor="@color/green"
                    app:layout_constraintEnd_toEndOf="@id/tvRemNumHome"
                    app:layout_constraintStart_toStartOf="@id/tvRemNumHome"
                    app:layout_constraintTop_toBottomOf="@id/tvRemNumHome" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/recyclerViewHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>