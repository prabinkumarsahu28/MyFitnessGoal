<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    app:cardMaxElevation="@dimen/dp_40"
    android:elevation="@dimen/dp_40">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHeadingHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_20"
            android:text="sample"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivImageHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/tvHeadingHome" />

        <ImageView
            android:id="@+id/ivVdoPlayButtonHome"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_play_button"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivImageHome"
            app:layout_constraintEnd_toEndOf="@id/ivImageHome"
            app:layout_constraintStart_toStartOf="@id/ivImageHome"
            app:layout_constraintTop_toTopOf="@id/ivImageHome" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>