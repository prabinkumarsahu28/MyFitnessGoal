<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    tools:context=".fragments.GoalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        android:weightSum="5">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_3"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@color/green" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_3"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@color/green" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_3"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@color/green" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_3"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@color/custom_grey" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_3"
            android:layout_margin="@dimen/dp_3"
            android:layout_weight="1"
            android:background="@color/custom_grey" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="How active are you?"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <RadioGroup
        android:id="@+id/rgActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbNotVeryActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:text="Not Very Active" />

        <RadioButton
            android:id="@+id/rbLightlyActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:text="Lightly Active" />

        <RadioButton
            android:id="@+id/rbActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:text="Active" />

        <RadioButton
            android:id="@+id/rbVeryActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:text="Very Active" />

    </RadioGroup>

</LinearLayout>