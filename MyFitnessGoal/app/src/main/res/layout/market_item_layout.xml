<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvSproutsMarket"
    android:layout_width="@dimen/dp_180"
    android:layout_height="220dp"
    android:layout_margin="@dimen/dp_10"
    android:elevation="@dimen/dp_20"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardMaxElevation="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/rvSprouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSproutsMarket"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_150"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvMarketItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivSproutsMarket"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMarketItemName"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/black" />

        <!--        <ImageButton-->
